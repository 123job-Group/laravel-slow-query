{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "airbnb",
        "eslint:recommended",
        "plugin:prettier/recommended",
        "plugin:vue/vue3-recommended"
    ],
    "plugins": ["prettier"],
    "parserOptions": {
        "ecmaVersion": 2016,
        "sourceType": "module"
    },
    "rules": {
        "prettier/prettier": "error",
        "no-debugger": 0,
        "no-alert": 0,
        "indent": ["error", 4],
        "arrow-body-style": [2, "as-needed"],
        "quotes": [
            2,
            "single",
            {
                "avoidEscape": true,
                "allowTemplateLiterals": true
            }
        ]
    }
}
